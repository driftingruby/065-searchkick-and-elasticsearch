<%= simple_form_for(@movie) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :year %>
    <%= f.input :rating %>
    <%= f.input :released %>
    <%= f.input :runtime %>
    <%= f.input :plot %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
